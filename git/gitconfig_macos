[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true    # use n and N to move between diff sections
    line-numbers = true
    paging = always
    true-color = always

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
